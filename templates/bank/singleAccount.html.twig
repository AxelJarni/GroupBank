{% extends 'base.html.twig' %}
{# Changing Title with account number (only if account id is correct) #}
{% block title %}Group Bank - Votre compte {% if account is not empty %}{{account.accountType}}{% endif %}{% endblock %} {# intégrer intitulé du compte #}

{% block body %}
    {# To make sure that {{account}} is not empty to avoid a fatal error if User type an account ID that is not his #}
    {% if account is not empty %}
        <div class="row">
            <article class="container col-12 row mx-auto" id="accountContainer">
                <div class="col-12 mx-auto">
                    <div class="card mx-1">
                        <div class="row card-body justify-content-center align-items-center text-center bg-sombre">
                            <div class="col-sm-4 vh-2">
                                <img class="img-fluid" src="{{ asset('img/gg-key.png') }}" alt="Key to Group bank">
                            </div>
                            <div class="row col-sm-8 align-items-center">
                                <div class="col-sm-6">
                                    <h1 class="card-title color-gold m-0">{{account.accountType}}</h1> <!-- intégrer intitulé du compte -->
                                </div>
                                <div class="col-sm-6">
                                    <p class="card-text m-0 text-white">N° {{account.id}}</p> <!-- intégrer numéro du compte -->
                                </div>
                            </div>
                        </div>
                    </div>
                    <ul class="list-group list-group-flush borderGold">
                        <li class="list-group-item owner">Date de création : {{account.openingdate|date('d/m/Y')}}</li> <!-- intégrer date de création du compte -->
                        <li class="list-group-item owner borderGrey">Solde : {{account.amount}} Simflouz</li> <!-- intégrer solde du compte -->
                        <h3 class="text-center my-3">Opérations</h3>
                            {% if account.operations is not empty %}
                                {% for operation in account.operations %}
                                <li class="list-group-item balance"> ===> Le {{operation.registered|date('d/m/Y')}} à {{operation.registered|date('H:i')}} : {{operation.label}} = {{operation.operationamount}} SF</li> <!-- intégrer date - intitulé - montant du mouvement -->
                                {% endfor %}
                            {% endif %}
                    </ul>
                    <div class="card-body text-center bg-sombre">
                        <a href="{{ path("closeAccountPage") }}" class="btn btn-gold mx-1">Clore</a> <!-- passer parametre objet Account selectionné pour auto selectionner le compte dans la liste du formulaire ??? -->
                        <a href="{{ path("depositWithdrawalPage", {accountId: account.id, depotRetrait: 1} ) }}" class="btn btn-gold mx-1">Dépôt</a> <!-- passer parametre objet Account selectionné pour auto selectionner le compte dans la liste du formulaire ??? -->
                        <a href="{{ path("depositWithdrawalPage", {accountId: account.id, depotRetrait: 2} ) }}" class="btn btn-gold mx-1">Retrait</a> <!-- passer parametre objet Account selectionné pour auto selectionner le compte dans la liste du formulaire ??? -->
                    </div>
                </div>
            </article>
        </div>
    {# If account is empty (meaning id in URL does not go to current user's account) #}
    {% else %}
        <div class="alert alert-danger">
            <p>Vous tentez d'accéder à un compte ne vous appartenant pas.<br>Les autorités viennent d'être alertés<br>Restez où vous êtes</p>
        </div>
    {% endif %}
{% endblock %}
